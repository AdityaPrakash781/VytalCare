{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "cleanUrls": true,

  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 20
    }
  },

  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
